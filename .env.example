# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-app-name.railway.app

# Email Configuration (Optional - for SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com

# Gmail Configuration (Alternative to SMTP)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Flutterwave Payment Configuration (Optional)
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key
FLUTTERWAVE_SECRET_HASH=your-flutterwave-webhook-hash

# Object Storage Configuration (Optional)
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# Base URL Configuration (Optional)
BASE_URL=https://your-app-name.railway.app
REPLIT_DOMAINS=